{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "outline"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the document. If no title is found, defaults to 'Untitled Document'",
      "minLength": 1
    },
    "outline": {
      "type": "array",
      "description": "Array of heading items that form the document outline",
      "items": {
        "type": "object",
        "required": ["level", "text", "page"],
        "properties": {
          "level": {
            "type": "string",
            "enum": ["H1", "H2", "H3"],
            "description": "The heading level indicating the hierarchy (H1 being highest)"
          },
          "text": {
            "type": "string",
            "description": "The actual text content of the heading",
            "minLength": 1
          },
          "page": {
            "type": "integer",
            "description": "The page number where this heading appears (1-based)",
            "minimum": 1
          }
        }
      }
    }
  },
  "examples": [
    {
      "title": "Sample Document Title",
      "outline": [
        {
          "level": "H1",
          "text": "Introduction",
          "page": 1
        },
        {
          "level": "H2",
          "text": "Background",
          "page": 1
        },
        {
          "level": "H3",
          "text": "Historical Context",
          "page": 2
        }
      ]
    }
  ]
} 